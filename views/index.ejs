<%- include("partials/header.ejs") %>

<div class="sort__box">
    <div class="sort__options">
        <form action="/sort" method="post">
            <label for="sortTitle">Title:</label>
            <select name="sortTitle" id="">
                <option value="Ascending">Ascending</option>
                <option value="Descending">Descending</option>
            </select>
            <label for="sortReviewSize">Review Size</label>
            <select name="sortReviewSize" id="">
                <option value="Largest">Largest</option>
                <option value="Smallest">Smallest</option>
            </select>
            <label for="sortRating">Rating</label>
            <select name="sortRating" id="">
                <option value="Highest">Highest</option>
                <option value="Lowest">Lowest</option>
            </select>
            <label for="sortDate">By date:</label>
            <select name="sortDate" id="">
                <option value="Oldest">Oldest</option>
                <option value="Recent">Recent</option>
            </select>
            <button type="submit" name="sortBooks">Sort</button>    
        </form>
        </div>
</div>

    <div class="book__box">
        <% for (let book of allBooks) { %>
            <h2 class="review__title"><%= book.title %></h2>
            <h6 class="review__date"><%= book.date %></h6>
            <p class="review__paragraph"><%= book.review %></p>
            <div class="review__rating"><%= book.rating %>/10</div>
            <form action="/delete" method="post">
                <button type="submit" value="<%= book.id %>" name="deleteBook">Delete</button>
            </form>
            <form action="/edit" method="post">
                <button type="submit" value="<%= book.id %>" name="updateBook">Edit</button>
            </form>
            <% } %>
    </div>


<%- include("partials/footer.ejs") %>